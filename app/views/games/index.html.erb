<h1>Current Games</h1>

<table>
  <tr>
    <th>Game Name</th>
    <th>It started at</th>
    <th>Variant</th>
    <th>Status</th>
  </tr>

<% @games.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

