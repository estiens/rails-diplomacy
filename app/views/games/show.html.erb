<% content_for :includes do %><%= javascript_include_tag :game %><% end %>
<div ng-app="diplomacy">
<p id="notice"><%= notice %></p>

<div id="game" ng-controller="DiplomacyGameCtrl">
<h2><%= @game.name %></h2>
<hr />

<div id="map"></div>
<div id="status">
<h3>Game Status</h3>

<% for area, state in @game.current_state.to_gamestate %>
	<div>
		<h3><%= area %></h3>
		<p><%= state.unit.nationality %> <%= state.unit.type_to_s %></p>
	</div>
<% end %>
</div>
</div>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
</div>
