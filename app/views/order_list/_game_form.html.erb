<%= form_for(order_list, remote: true) do |f| %>
  <%= f.text_area :orders, class: order_list.confirmed ? :confirmed : :unconfirmed %>
  <%= f.hidden_field :state_id %>
  <%= f.hidden_field :power %>
  <%= f.hidden_field :confirmed %>
  <%= f.submit :Submit %>
  <%= f.submit :Confirm, class: order_list.confirmed ? :hide : '' %>
  <%= f.submit :Unconfirm, class: order_list.confirmed ? '' : :hide %>
<% end %>
